{
  "manifest_version": 3,
  "name": "Lentodiilit Deals Notifier",
  "version": "1.0",
  "description": "Notifies about new flight deals from lentodiilit.fi",
  "permissions": [
    "notifications",
    "storage",
    "alarms",
    "background"
  ],
  "host_permissions": [
    "https://lentodiilit.fi/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}